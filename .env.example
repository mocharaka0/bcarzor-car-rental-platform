# ==========================================
# APPLICATION CONFIGURATION
# ==========================================
APP_NAME="Car Rental Platform"
APP_ENV=local
APP_DEBUG=true
APP_URL=http://localhost:8000
APP_KEY=

# ==========================================
# DATABASE CONFIGURATION
# ==========================================
DB_CONNECTION=sqlite
DB_DATABASE=database/database.sqlite

# PostgreSQL Configuration (for production)
# DB_CONNECTION=pgsql
# DB_HOST=127.0.0.1
# DB_PORT=5432
# DB_DATABASE=bcarzor_db
# DB_USERNAME=bcarzor_user
# DB_PASSWORD=bcarzor_password

# ==========================================
# CACHE CONFIGURATION
# ==========================================
CACHE_DRIVER=file
QUEUE_CONNECTION=sync
SESSION_DRIVER=file
SESSION_LIFETIME=120

# Redis Configuration (for production)
# REDIS_HOST=127.0.0.1
# REDIS_PASSWORD=null
# REDIS_PORT=6379

# ==========================================
# MAIL CONFIGURATION
# ==========================================
MAIL_MAILER=smtp
MAIL_HOST=mailpit
MAIL_PORT=1025
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS="hello@example.com"
MAIL_FROM_NAME="${APP_NAME}"

# ==========================================
# PAYMENT GATEWAY CONFIGURATION
# ==========================================

# Stripe Configuration
STRIPE_PUBLIC_KEY=pk_test_your_stripe_public_key_here
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_stripe_webhook_secret_here

# PayPal Configuration
PAYPAL_CLIENT_ID=your_paypal_client_id_here
PAYPAL_CLIENT_SECRET=your_paypal_client_secret_here
PAYPAL_MODE=sandbox
# PAYPAL_MODE=live  # For production

# Bank Transfer Configuration
BANK_TRANSFER_ENABLED=true
BANK_NAME="Your Bank Name"
BANK_ACCOUNT_NAME="Your Account Name"
BANK_ACCOUNT_NUMBER="1234567890"
BANK_ROUTING_NUMBER="123456789"
BANK_SWIFT_CODE="ABCDXYZ123"

# ==========================================
# EXTERNAL API CONFIGURATION
# ==========================================

# Google Maps API
GOOGLE_MAPS_API_KEY=your_google_maps_api_key_here
GOOGLE_MAPS_ENABLED=true

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4
OPENAI_ENABLED=true

# Firebase Configuration (for push notifications)
FIREBASE_SERVER_KEY=your_firebase_server_key_here
FIREBASE_PROJECT_ID=your_firebase_project_id_here
FIREBASE_ENABLED=true

# ==========================================
# BUSINESS CONFIGURATION
# ==========================================

# Commission Settings
PLATFORM_COMMISSION_RATE=3.0
PAYMENT_PROCESSING_FEE=2.9
PAYMENT_PROCESSING_FIXED_FEE=0.30

# Booking Settings
DEFAULT_BOOKING_DURATION_HOURS=24
MAX_ADVANCE_BOOKING_DAYS=365
MIN_ADVANCE_BOOKING_HOURS=2

# Security Settings
PASSWORD_MIN_LENGTH=8
SESSION_TIMEOUT_MINUTES=120
MAX_LOGIN_ATTEMPTS=5
LOGIN_LOCKOUT_MINUTES=15

# ==========================================
# FEATURE FLAGS
# ==========================================
FEATURE_AI_PRICING=true
FEATURE_GPS_TRACKING=true
FEATURE_MOBILE_APP=true
FEATURE_MULTI_PAYMENT=true
FEATURE_REVIEWS=true
FEATURE_SUPPORT_TICKETS=true

# ==========================================
# LOGGING CONFIGURATION
# ==========================================
LOG_CHANNEL=stack
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

# ==========================================
# FILESYSTEM CONFIGURATION
# ==========================================
FILESYSTEM_DISK=local

# AWS S3 Configuration (for production file storage)
# AWS_ACCESS_KEY_ID=
# AWS_SECRET_ACCESS_KEY=
# AWS_DEFAULT_REGION=us-east-1
# AWS_BUCKET=
# AWS_USE_PATH_STYLE_ENDPOINT=false

# ==========================================
# FRONTEND CONFIGURATION
# ==========================================
FRONTEND_URL=http://localhost:3000
API_URL=http://localhost:8000/api

# ==========================================
# MOBILE APP CONFIGURATION
# ==========================================
MOBILE_APP_VERSION=1.0.0
MOBILE_API_VERSION=v1
MOBILE_UPDATE_REQUIRED=false

# ==========================================
# DEVELOPMENT & DEBUGGING
